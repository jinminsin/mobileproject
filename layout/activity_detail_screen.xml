<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailScreen"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="기본 정보"
                android:textColor="@android:color/holo_purple"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름 : HUMAN"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/textHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="키 : 0 cm"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/textWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="몸무게 : 0 kg"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/textLv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="레벨 : 0"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/textSleepTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="수면 시간 : 00:00 ~ 00:00" />

            <TextView
                android:id="@+id/textStepGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="일일 목표 걸음 수 : 0 걸음" />

            <TextView
                android:id="@+id/textDistanceGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="일일 목표 이동 거리 : 0 km" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_blue_bright" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="일일 기록"
                android:textColor="@android:color/holo_purple"
                android:textSize="30dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="* 매일 초기화됩니다."
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textCalorie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="칼로리 : 0 kcal"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/textStep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="누적 걸음 수 : 0 걸음"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/textDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="누적 이동 거리 : 0 km" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_blue_bright" />

            <TextView
                android:id="@+id/textNegativeExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="비만도 : 0"
                android:layout_margin="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* 걷지 않을수록 증가하며,\n   주기적으로 경험치를 떨어뜨립니다."
                android:textColor="@android:color/darker_gray"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="가장 최근에 이동한 날짜"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/textLastExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 0000/00/00 (월) 00:00"
                android:layout_gravity="end"
                android:gravity="end"
                android:layout_marginRight="30dp"/>

            <TextView
                android:id="@+id/textCurrentExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="현재 경험치 : 0"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/textMaxExp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="필요 경험치 : 0"
                android:layout_margin="5dp" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@android:color/holo_blue_bright" />

            <Button
                android:id="@+id/buttonReturn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="end"
                android:background="@android:color/holo_blue_bright"
                android:onClick="ButtonClick"
                android:text="돌아가기" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
